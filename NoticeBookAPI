ENTITIES:
    user:
        Long id
        String name
    notice:
        Long id
        String text
        Tag tag
        User user
    tag:
        Long id
        String tag

OPERATIONS:
    user-controller:
        "GET /user - get all users"
        "GET /user/{id} - get user by ID"
        "POST /user - add new user"
        "PUT /user/{id} - update user by ID"
        "DELETE /user/{id} - delete user by ID"
    notice-controller:
        "GET /notice - get all notices"
        "GET /notice?user=id - get all notices of the user by ID"
        "GET /notice?tag=id - get all notices with the tag by ID"
        "GET /notice/{id} - get notice by ID"
        "POST /notice - add new notice" (@RequestBody - {user}, tag=null)
        "POST /notice?tag=id - add tag to notice by tagID"
        "PUT /notice/{id} - update notice by ID"
        "DELETE /notice/{id} - delete notice by ID"
    tag-controller:
        "GET /tag - get all tags"
        "GET /tag/{id} - get tag by ID"
        "GET /tag?notice=id - get all tags of the notice by ID"
        "POST /tag - add new tag"
        "PUT /tag/{id} - update tag by ID"
        "DELETE /tag/{id} - delete tag by ID"